<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home Inventory</title>

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

	<script src="/bower_components/jquery/dist/jquery.min.js"></script>
	<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="home.js"></script>

</head>
<body>
  <div class="container">
    <h1 class="text-center">Home Inventory</h1>

    <button class="btn btn-default btn-primary newGrade">New Home Inventory</button>

    <table class="table">
      <thead>
        <tr>
          <th class='id'>id</th>
          <th>make</th>
          <th>model</th>
          <th>serial number</th>
          <th>delete</th>
        </tr>
      </thead>
      <tbody class='gradeList'>

        <% for(var i = 0; i < grades.length; i++) { %>
          <tr data-id=<%=grades[i].id%>  >
            <td class='id'><%= grades[i].id %></td>
            <td><%= grades[i].make %></td>
            <td><%= grades[i].model %></td>
            <td><%= grades[i].serialnumber %></td>
            <td><input type='checkbox' name='' id='' class='isDelete'></td>
          </tr>
        <%  }  %>

      <tr class='template'>
        <td class='id'></td>
        <td class='make'></td>
        <td class='serialnumber'></td>
        <td><input type='checkbox' name='' id='' class='isDelete'></td>
      </tr>

      </tbody>
    </table>
  </div>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">

        <form class='newGradeForm'>
  		      <div class="modal-header">
  		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  		        <h4 class="modal-title" id="myModalLabel">Home Inventory</h4>
  		      </div>
  		      <div class="modal-body" style="padding: 40px 100px">

              <div id='id'></div>

  			      <div class="form-group id">
  			      	<label for="exampleInputName2">id</label>
  			      	<input type="text" class="form-control" id="id" placeholder="Auto Generate" readonly="true">
  			      </div>
  			      <div class="form-group">
  			      	<label for="exampleInputName2">make</label>
  			      	<input type="text" class="form-control" id="make" placeholder="make">
  			      </div>
  			      <div class="form-group">
  			      	<label for="exampleInputName2">model</label>
  			      	<input type="text" class="form-control" id="model" placeholder="model">
  			      </div>
  			      <div class="form-group">
  			      	<label for="exampleInputName2">serial number</label>
  			      	<input type="text" class="form-control" id="serialnumber" placeholder="serialnumber">
  			      </div>
  		      </div>

  		      <div class="modal-footer">
  		        <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
  		        <button type="button" class="btn btn-default" data-dismiss="modal" id="btnUpdate">Update</button>
  		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  		      </div>
          </form>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


</body>
</html>
